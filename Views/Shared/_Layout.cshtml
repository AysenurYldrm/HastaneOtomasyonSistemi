<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>R-Tercih Randevu ve Otomasyon Sistemi</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/SiteLayout/assets/img/favicon.png" rel="icon">
    <link href="~/SiteLayout/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/SiteLayout/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/SiteLayout/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/SiteLayout/assets/css/style.css" rel="stylesheet">

  
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="index.html">R-Tercih</a></h1>
         

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" href="#hero">@_localization.Getkey("home")</a></li>
                    <li><a class="nav-link scrollto" href="#about">@_localization.Getkey("hk")</a></li>
                    <li><a class="nav-link scrollto" href="#services">@_localization.Getkey("servis")</a></li>
                    <li><a class="nav-link scrollto" href="#departments">@_localization.Getkey("Poliklinikler")</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            <div class="dropdown">
                <button type="button" class="btn btn—primary dropdown—toggle"
                        data-bs-toggle="dropdown">
                    Dil Seçeneği
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a
                            asp-controller="Home"
                            asp-action="ChangeLanguage"
                             asp-route-culture="en-US"
                            class="dropdown-item">
                            
                            <i class="flag-icon flag-icon-gb"></i>ENG
                        </a>
                    </li>
                    <li>
                        <a
                            asp-controller="Home"
                            asp-action="ChangeLanguage"
                           asp-route-culture="tr-TR"
                            class="dropdown-item">
                            <i class="flag-icon flag-icon-gb"></i>TR
                        </a>
                    </li>
                </ul>
            </div>
            <a href="/Home/HomeLogin" class="appointment-btn scrollto"><span class="d-none d-md-inline"></span>@_localization.Getkey("giriş")</a>
            <a href="/Home/HomeRegister" class="bg-danger appointment-btn scrollto"><span class="d-none d-md-inline"></span> @_localization.Getkey("kayıt")</a>

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex align-items-center">
        <div class="container">
            <h1>
                @_localization.Getkey("Welcome") 
            </h1>
           
        </div>
    </section><!-- End Hero -->
    @await RenderSectionAsync("Scripts", required: false)

    <main id="main">

        @RenderBody()

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container d-md-flex py-4">

            <div class="me-md-auto text-center text-md-start">
                <div class="copyright">
                    &copy; Copyright <strong><span>R-Tercih</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                   
                    Designed by <a href="">Ayşenur Yıldırım</a>
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/SiteLayout/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/SiteLayout/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/SiteLayout/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/SiteLayout/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/SiteLayout/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/SiteLayout/assets/js/main.js"></script>

</body>

</html>


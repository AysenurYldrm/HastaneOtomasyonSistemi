@* @model HastaneOtomasyonSistemi.Models.Doktor *@
@model MultipleModelsViewModel
@{
	ViewData["Title"] = "Login";
	Layout = null;
}

<head>

	<link href="~/css/login.css" rel="stylesheet" />
	
</head>

<h2>@_localization.Getkey("HASTA VE DOKTOR GİRİŞ EKRANI")</h2>

<div class="container" id="container">
	<div class="form-container sign-in-container">

		<form asp-action="HomeLogin" method="post">
			<h2>@_localization.Getkey("HASTA GİRİŞ")</h2>
			<div asp-validation-summary="ModelOnly"></div>

			<input asp-for="hasta.KimlikNo" placeholder="@_localization.Getkey("Kimlik No")" />

			<input asp-for="hasta.Sifre" type="password" placeholder="@_localization.Getkey("Şifre")"/>
			@if (!string.IsNullOrEmpty(ViewBag.UyariH))
			{
				<p style="color: red;">@ViewBag.UyariH</p>
			}
			<button type="submit">@_localization.Getkey("giriş")</button>
		</form>
	</div>
	<div class="form-container sign-up-container">

		<form asp-action="HomeLogin" method="post">
			<h2>@_localization.Getkey("DOKTOR GİRİŞ")</h2>
			<div asp-validation-summary="ModelOnly"></div>

			<input asp-for="doktor.KimlikNo" placeholder="@_localization.Getkey("Kimlik No")" />

			<input asp-for="doktor.Sifre" type="password" placeholder="@_localization.Getkey("Şifre")" />
			@if (!string.IsNullOrEmpty(ViewBag.UyariD))
			{
				<p style="color: red;">@ViewBag.UyariD</p>
			}
			<button type="submit">@_localization.Getkey("giriş")</button>
		</form>

	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>@_localization.Getkey("Welcome")!</h1>
				<p>@_localization.Getkey("hlog") </p>
				<button class="ghost" id="signIn">@_localization.Getkey("HASTA GİRİŞ")</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>@_localization.Getkey("Welcome")!</h1>
				<p>@_localization.Getkey("hlog2")</p>
				<button class="ghost" id="signUp">@_localization.Getkey("DOKTOR GİRİŞ")</button>
			</div>
		</div>
	</div>
</div>

<footer>
	Created with <i class="fa fa-heart"></i> by
	<a target="_blank" href="#">Ayşenur Yıldırım</a>
	- Read how I created this
	<a target="_blank" href="#">here</a>.

	<script src="~/js/login.js"></script>
</footer>
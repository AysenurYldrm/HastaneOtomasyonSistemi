
@model HastaneOtomasyonSistemi.Models.Hasta
@{
	ViewData["Title"] = "Login";
	Layout = null;
}

<head>

	<link href="~/css/Register.css" rel="stylesheet" />
	
</head>

<h2>@_localization.Getkey("HASTA KAYIT EKRANI")</h2>

<div class="container" id="container">
	<div class="form-container sign-in-container">

		<form asp-action ="HomeRegister" method="post">
			<h2>@_localization.Getkey("Hasta Kaydı Oluştur")</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
			
				<input asp-for="Ad" placeholder="Ad" class="form-control" />
				<span asp-validation-for="Ad" class="text-danger"></span>
			</div>
			<div class="form-group">
			
				<input asp-for="soyAd" placeholder="Soyad" class="form-control" />
				<span asp-validation-for="soyAd" class="text-danger"></span>
			</div>
			<div class="form-group">
				
				<input asp-for="Sifre" placeholder="Şifre" class="form-control" />
				<span asp-validation-for="Sifre" class="text-danger"></span>
			</div>
			<div class="form-group">
			
				<input asp-for="KimlikNo" placeholder="Kimlik No" class="form-control" />
				<span asp-validation-for="KimlikNo" class="text-danger"></span>
			</div>
			<div class="form-group">
				
				<input asp-for="DogumTarihi" placeholder="Doğum Tarihi" class="form-control" />
				<span asp-validation-for="DogumTarihi" class="text-danger"></span>
			</div>
			<div class="form-group">
				@if (!string.IsNullOrEmpty(ViewBag.UyariR))
				{
					<p style="color: red;">@ViewBag.UyariR</p>
				}
					<button type="submit"  value="KayıtOl">KAYIT OL</button>
			</div>
		</form>
			
	</div>
	
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
				<h1>Hoşgeldiniz!</h1>
				<p>Randevu oluşturmak ya da diğer işlemleriniz için lütfen kayıt olunuz.</p>
			</div>
		</div>
	</div>
</div>

<footer>
	Created with <i class="fa fa-heart"></i> by
	<a target="_blank" href="#">Ayşenur Yıldırım</a>
	- Read how I created this
	<a target="_blank" href="#">here</a>.

	<script src="~/js/login.js"></script>
</footer>
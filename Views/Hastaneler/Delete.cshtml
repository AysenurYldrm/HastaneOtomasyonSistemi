@model HastaneOtomasyonSistemi.Models.Hastaneler

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<h1>Hastane Silme</h1>

<h3>Bu hastaneyi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Hastaneler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HastaneAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HastaneAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.il)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.il.ilAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ilce)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ilce.ilceAd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeyi görüntüle</a>
    </form>
</div>
